    }

    print C; // Fatorial de 5 = 120

    // Teste de múltiplas expressões
    X = 1 + 2 * 3 - (4 / 2); // 1 + 6 - 2 = 5
    print X;

    // Chamada de função recursiva
    Y = fibonacci(8); // Fibonacci(8) = 21
    print Y;

    // Teste de IF aninhado e atribuição
    if (X != Y) {
        int Z;
